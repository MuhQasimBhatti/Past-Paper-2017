// sum of all non negative numbers in both diaogonals of a matrix

#include<iostream>
using namespace std;
int main()
{
	int matrix[3][3];
	for (int i = 0; i < 3; i++)
		for (int j = 0; j < 3; j++)
			cin >> matrix[i][j];
	//------------------------------
	cout << "Matrix is:" << endl;
	for (int i = 0; i < 3; i++)
	{
		for (int j = 0; j < 3; 
			cout << matrix[i][j] << "  ";
		cout << endl;
	}
	//------------------------------
	int lsum = 0;
	int rsum = 0;

	cout << "Sum of non negative diagonal enteries" << endl;
	for (int i = 0; i < 3; i++)
		for (int j = 0; j < 3; j++)
		{
			if (i == j && matrix[i][j] >= 0)
				lsum += matrix[i][j];
			else if ((i + j) == 2 && matrix[i][j] >= 0)
				rsum += matrix[i][j];
		}

	cout << lsum + rsum << endl;


}

